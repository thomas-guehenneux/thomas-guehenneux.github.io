---
import type { ImageMetadata } from 'astro'
import { Picture } from 'astro:assets'

interface Props {
  src: ImageMetadata
  alt: string
  lang: 'en' | 'ja'
}

const { src, alt } = Astro.props
---

<Picture
  {src}
  alt={alt}
  densities={[1, 2, 3]}
  loading="eager"
  decoding="auto"
  quality="high"
  formats={['avif', 'webp']}
/>
