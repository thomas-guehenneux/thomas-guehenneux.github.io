---
import type { ImageMetadata } from 'astro'
import { Picture } from 'astro:assets'

interface Props {
  src: ImageMetadata
  alt: string
  lang: 'en' | 'ja'
}

const { src, alt } = Astro.props
---

<Picture
  {src}
  {alt}
  widths={[750, 1170, 1290, src.width]}
  formats={['avif', 'webp']}
  loading="eager"
  decoding="auto"
  class="size-full object-cover"
  pictureAttributes={{
    class: 'size-full',
  }}
/>
